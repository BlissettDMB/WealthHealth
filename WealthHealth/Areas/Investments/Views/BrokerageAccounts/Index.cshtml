@model WealthHealth.ViewModels.Investments.BrokerageAccounts.BrokerageAccountOverviewVm

@{
    ViewBag.Title = "Portfolio Overview";
}
@Html.ActionLink("Add a new brokerage account", "Add", "BrokerageAccounts", new { area = "Investments" }, new { @class = "btn btn-large" })
@Html.ActionLink("Add a stock purchase", "AddPurchase", "StockTransactions", new { area = "Investments" }, new { @class = "btn btn-large" })
@Html.ActionLink("Add a stock sell", "AddSell", "StockTransactions", new { area = "Investments" }, new { @class = "btn btn-large" })
<div class="row-fluid">
    <h2>Non-Retirement</h2>
    @if (Model.NonRetirementAccounts.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Account Number</th>
                    <th>Brokerage</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var nonRetirementAccount in Model.NonRetirementAccounts)
            {
                <tr>
                    <td>@nonRetirementAccount.Title</td>
                    <td>@nonRetirementAccount.AccountNumber</td>
                    <td>@nonRetirementAccount.Brokerage.Title</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>You do not have any Non-Retirement Accounts registerd. Please create a new non-retirement account to manage.</p>
    }
</div>

<div class="row-fluid">
    <h2>Retirement</h2>
    @if (Model.RetirementAccounts.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Account</th>
                    <th>Account Number</th>
                    <th>Brokerage</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var retirementAccount in Model.RetirementAccounts)
            {
                <tr>
                    <td>@retirementAccount.Title</td>
                    <td>@retirementAccount.AccountNumber</td>
                    <td>@retirementAccount.Brokerage.Title</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>You do not have any Retirement Accounts registerd. Please create a new retirement account to manage.</p>
    }
</div>